---
import Layout from "@layouts/Layout.astro";
const title = `Error 404`;
---

<Layout title="404">
  <section class="flex items-center h-full p-16">
    <div class="container flex flex-col items-center justify-center px-5 mx-auto my-8">
      <div class="max-w-md text-center">
        <h2 class="mb-8 font-bold text-9xl">
          <span class="sr-only">Error</span>
          <span class="text-primary">404</span>
        </h2>
        <p class="text-3xl font-semibold md:text-3xl">No hemos podido encontrar la página que buscabas</p>
        <p class="mt-4 mb-8 text-lg text-muted dark:text-slate-400">quieres ir al inicio?</p>
        <a rel="noopener noreferrer" href="/" class="btn ml-4">Hazlo aquí</a>
      </div>
    </div>
  </section>
</Layout>
