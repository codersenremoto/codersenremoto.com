import { Icon } from "astro-icon";
import Link from "@components/ui/link.astro";
---

<div id="features" class="relative mx-auto max-w-5xl px-6 lg:px-8">
	<div class="mx-auto max-w-2xl lg:text-center">
		<h2 class="mt-2 text-3xl font-bold tracking-tight text-black dark:text-white sm:text-4xl">Qué te espera dentro</h2>
      <p class="mt-6 text-lg leading-8 text-gray-900 dark:text-gray-100 font-semibold">Conexiones y oportunidades</p>
      <p class="mt-6 text-lg leading-8 text-gray-900 dark:text-gray-100 font-semibold">Contactos en tu localidad o en cualquier parte del mundo</p>
      <p class="mt-6 text-lg leading-8 text-gray-900 dark:text-gray-100 font-semibold">Contenido estructurado para consumir a tu ritmo</p>
      <p class="mt-6 text-lg leading-8 text-gray-900 dark:text-gray-100 font-semibold">Oportunidad para aprender y enseñar</p>
      <p class="mt-6 text-lg leading-8 text-gray-900 dark:text-gray-100 font-semibold">Job offers y referrals</p>
      <p class="mt-6 text-lg leading-8 text-gray-900 dark:text-gray-100 font-semibold">Motivación para crecer</p>
		</p>
	</div>
</div>
